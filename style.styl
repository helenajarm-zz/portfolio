gray = rgba(0, 0, 0, 0.7)
line-height = 24px
Normal = "FoundersGrotesk",'Helvetica-Neue',sans-serif
Italic = "FoundersGrotesk-Italic",'Helvetica-Neue',sans-serif !important

body
  text-align: left
  background-color white
  font-size 16px
  color black
  margin 32px 120px 0px 120px
  font-family Normal
  @media screen and (max-width: 600px)
    margin 0px 40px


h1,h2,h3,h4,p
  -webkit-margin-before:0em
  -webkit-margin-after:0em
  font-weight normal

h1
  font-size 81px
  line-height 85px
  letter-spacing -0.02em
  @media screen and (max-width: 600px)
    font-size: 54px
    line-height: 60px

h2
  font-size 54px
  padding-top 8px
  line height 81px
  letter-spacing -0.02em
  @media screen and (max-width: 600px)
    font-size: 32px
    line-height: 36px

h3
  font-size 24px
  letter-spacing: 0.05em
  line-height: line-height

h4,p
  font-size 18px
  line-height: 28px
  color: gray

h4
  letter-spacing: 0.05em;
  color rgba(0, 0, 0, 0.4)


p
  padding: 24px 0px;

a
 color: gray
 font-family Italic
 font-weight normal
 text-decoration: none;
 padding-bottom:4px;
 border-bottom: 2px solid red;
 &:hover
   padding-bottom:6px;
   border-bottom: 2px solid red;

.intro-header
  visibility: hidden
  padding:120px 0px 80px 0px;
  width: 55%;
  h4
    margin-top 25px
  p
    padding-top 0px !important
  @media screen and (max-width: 600px)
    width: 100%;
    padding: 180px 0px 100px;

.background
  background-position: top;
  background-size: contain;
  background-repeat: no-repeat;

.container
  display: flex;
  flex-direction: row;
  visibility: hidden;
  @media screen and (max-width: 600px)
    display: flex;
    flex-direction: column;

.container-column
  display: flex;
  flex-direction: column;

.width-half
  max-width 45%
  @media screen and (max-width: 600px)
    max-width 100%

.width
  max-width: 40%;
  @media screen and (max-width: 600px)
    max-width: 100%;


.project
  padding:0px 0px;

.block-header
  visibility: hidden;
  margin: 100px 0px;
  max-width: 60%;
  @media screen and (max-width: 600px)
    margin: 50px 0px;
    max-width: 100%;

.item
  margin: 0px 0px;
  width: 100%;

.tiny
  padding-top: 29%
  @media screen and (max-width: 600px)
    padding-top: 56%
    margin-top: 50px

.small
  padding-top: 34%
  @media screen and (max-width: 600px)
    padding-top: 76.50%

.tall
  @media screen and (max-width: 600px)
    padding-top: 160% !important

.collage
  padding-top: 40%
  @media screen and (max-width: 600px)
    padding-top: 132% !important

.full
  padding-top: 76.50%

.hundred
  margin 100px 0px
  @media screen and (max-width: 600px)
    margin 50px 0px

.fiftym
  @media screen and (max-width: 600px)
    margin 50px 0px

.fifty
  margin 50px 0px

.square
 padding-top: 52%
 @media screen and (max-width: 600px)
  padding-top: 80%

.first
  margin-right: 10%;

.pushup
  margin-top -100px
  @media screen and (max-width: 600px)
    margin-top -50px

.edge-left
  margin-left -120px
  background-position left top
  @media screen and (max-width: 600px)
    margin-left -60px


.edge-right
  margin-right -120px
  background-position bottom

#accent
  position: absolute
  height: 300px
  width: 100%
  top: 0px
  right: 0px
  background-position: right
  @media screen and (max-width: 600px)
    height 200px

#footer
  width 100%
  height 220px
  background-position bottom
  @media screen and (max-width: 600px)
    width: 130%;
    height: 200px;
    background-position: bottom left
    margin-left: -40px;
    margin-right: -40px;
    background-size cover
