gray = rgba(0, 0, 0, 0.7)
line-height = 24px
Arial = 'Aria','Helvetica-Neue',sans-serif;

body
  text-align: left
  background-color white
  font-size 16px
  color black
  margin 32px 120px 0px 120px
  font-family "Sporting Grotesque_Regular", "AdobeBlank"
  @media screen and (max-width: 600px)
    margin 16px 40px


h1,h2,h3,h4,p
  -webkit-margin-before:0em
  -webkit-margin-after:0em

h1
  font-weight: normal
  font-size 54px
  line-height 81px
  letter-spacing -0.05em
  @media screen and (max-width: 600px)
    font-size: 28px
    line-height: 48px

h2
  font-size 36px
  padding-top 8px
  line height 54px
  letter-spacing -0.05em
  @media screen and (max-width: 600px)
    font-size: 24px
    line-height: 36px

h3
  letter-spacing: 0.05em
  line-height: line-height
  font-family: Arial
  font-weight: normal

h4,p
  line-height:  line-height
  font-size: 11px;
  color: gray
  line-height: line-height

h4
  letter-spacing: 0.05em;
  font-weight: regular;
  color rgba(0, 0, 0, 0.4)

p
  padding: 24px 0px;
  font-size: 14px;
  font-family: 'Aria','Helvetica-Neue',sans-serif;

a
 color: gray
 font-weight normal
 font-size: 14px
 font-family: Arial
 text-decoration: none;
 padding-bottom:4px;
 border-bottom: 2px solid red;
 &:hover
   padding-bottom:6px;
   border-bottom: 2px solid red;

.intro-header
  visibility: hidden
  padding: 200px 0px;
  width: 60%;
  @media screen and (max-width: 600px)
    width: 100%;
    padding: 100px 0px;

.background
  background-position: top;
  background-size: contain;
  background-repeat: no-repeat;

.container
  display: flex;
  flex-direction: row;
  visibility: hidden;
  @media screen and (max-width: 600px)
    display: flex;
    flex-direction: column;

.container-column
  display: flex;
  flex-direction: column;

.width-half
  max-width 45%

.width
  max-width: 40%;
  @media screen and (max-width: 600px)
    max-width: 100%;


.project
  padding:0px 0px;

.block-header
  visibility: hidden;
  margin: 100px 0px;
  max-width: 50%;
  @media screen and (max-width: 600px)
    margin: 25px 0px;
    max-width: 100%;

.item
  margin: 0px 0px;
  width: 100%;

.tiny
  padding-top: 29%

.small
  padding-top: 34%

.full
  padding-top: 76.50%

.hundred
  margin 100px 0px

.fifty
  margin 50px 0px

.square
 padding-top: 52%

.first
  margin-right: 10%;

.pushup
  margin-top -100px

.edge-left
  margin-left -120px
  background-position left top


.edge-right
  margin-right -120px
  background-position bottom

#accent
  position: absolute
  height: 300px
  width: 100%
  top: 0px
  right: 0px
  background-position: right

#footer
  width 100%
  height 220px
  background-position bottom
